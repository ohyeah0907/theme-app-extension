{% style %}
  p {
    margin: 0
  }
  .container {
      background-image: url({{block.settings["background_image"]}});
      background-size: 100% 100%;
      background-repeat: no-repeat;
      position: relative;
      height: fit-content;
      padding: 20px
    }
  .default-image {
    z-index: -1;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: stretch
  }  
  .heading {
    color: {{block.settings["heading_color"]}}
    ;
    font-size: {{block.settings["heading_font_size"] }}px
    ;
    font-weight: {{block.settings["heading_font_weight"]}}
    ;
    text-transform: {{ block.settings["heading_text_transform"]}};
    line-height: 1
  }
  .sub-heading {
    color: {{block.settings["sub_heading_color"]}}
    ;
    font-size: {{block.settings["sub_heading_font_size"] }}px
    ;
    font-weight: {{block.settings["sub_heading_font_weight"]}}
    ;
    text-transform: {{ block.settings["sub_heading_text_transform"]}};
  }
  .content {
    color: {{block.settings["content_color"]}}
    ;
    font-size: {{block.settings["content_font_size"] }}px
    ;
    font-weight: {{block.settings["content_font_weight"]}}
    ;
    text-transform: {{ block.settings["content_text_transform"]}};
    margin-bottom: 10px;
  }
  .submit-button {
    border-radius: 15px;
    border: none;
    padding: 5px 10px;
    background-color: {{block.settings["button_background_color"]}};
    color: {{block.settings["button_color"]}};
    font-size: {{block.settings["button_font_size"]}}px;
    font-weight: {{block.settings["button_font_weight"]}};
    text-transform: {{block.settings["button_text_transform"]}};
    cursor: pointer;
    text-decoration: none;
  }
{% endstyle %}

<div class="container">
  {%- if block.settings["background_image"] == nil -%} 
    <img src="https://img.freepik.com/free-vector/hand-painted-watercolor-pastel-sky-background_23-2148902771.jpg" class = "default-image"/>  
{%- endif -%}
  <p class="heading">
    {{ block.settings["heading"] }}
  </p>
  <p class="sub-heading">
    {{ block.settings["sub_heading"] }}
  </p>
  <p class="content">
    {{ block.settings["content"] }}
  </p>
  {%- if block.settings["button"] == nil -%}
    {%- assign url = "https://admin.shopify.com/store/hulla-store/products"-%}
  {% else %}
    {%- assign url = block.settings["button"]-%}
  {% endif %}
  <a class="submit-button" href = "{{url}}">JOIN NOW</a>
</div>



